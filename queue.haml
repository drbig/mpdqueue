%table.table.table-striped
  %thead
    %tr
      %th #
      %th Artist
      %th Album
      %th Title
      %th.text-right Length
  %tbody
    - total = 0
    - queue.each_with_index do |song, i|
      - total += song.time
      - style = current == song ? {style: 'color: red;'} : {}
      %tr{style}
        %td= i+1
        %td= song.artist
        %td= song.album
        %td= song.title
        %td.text-right= time_to_str(song.time)
    - if total > 0
      %tr
        %td
        %td
        %td
        %td
        %td.text-right
          %b= time_to_str(total)

